{
    "name": "NikeSNKRS extension",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": true
        
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
       "128": "icon_128.png" 
    },
    "permissions": [
        "declarativeContent", 
        "storage", 
        "activeTab",
        "proxy",
        "tabs",
        "unlimitedStorage",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "activeTab",
        "cookies",
        "http://nike.com/*"
    ]
}
